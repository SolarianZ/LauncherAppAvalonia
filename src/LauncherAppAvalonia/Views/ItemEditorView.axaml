<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LauncherAppAvalonia.ViewModels"
             xmlns:viewModels="clr-namespace:LauncherAppAvalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"
             x:Class="LauncherAppAvalonia.Views.ItemEditorView"
             x:DataType="viewModels:ItemEditorViewModel"
             Background="Black">

    <Design.DataContext>
        <vm:ItemEditorViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto">
        <!-- Title -->
        <Panel Background="Gray" Height="28">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">编辑项目</TextBlock>
        </Panel>

        <!-- Item Content -->
        <StackPanel Grid.Row="1" Margin="8" Spacing="8">
            <TextBox Name="PathTextBox" Watermark="输入路径、网址或命令" Height="80" />
            <TextBox Name="NameTextBox" Watermark="输入显示名称（可选）" />
            <ComboBox Name="TypeComboBox" ToolTip.Tip="选择项目类型" SelectedIndex="0" HorizontalAlignment="Stretch">
                <ComboBoxItem>File</ComboBoxItem>
                <ComboBoxItem>Folder</ComboBoxItem>
                <ComboBoxItem>Url</ComboBoxItem>
                <ComboBoxItem>Command</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Spacing -->
        <Panel Grid.Row="2" Background="Transparent" />

        <!-- Tips -->
        <TextBlock Grid.Row="3" Name="ErrorTextBlock" Margin="8"
                   Foreground="Red" TextWrapping="Wrap">
            ERROR TEXT 错误信息
            <LineBreak />
            ERROR TEXT 错误信息
        </TextBlock>

        <!-- Buttons -->
        <Grid Grid.Row="4" ColumnDefinitions="Auto,Auto,*,Auto,Auto" Height="32"
              ColumnSpacing="4" Margin="8">
            <!-- Left -->
            <Button Grid.Column="0" Command="{Binding SelectFileCommand}" ToolTip.Tip="选择本地文件">📄</Button>
            <Button Grid.Column="1" Command="{Binding SelectFolderCommand}" ToolTip.Tip="选择本地文件夹">📂</Button>
            <!-- Spacing -->
            <Panel Grid.Column="2" />
            <!-- Right -->
            <Button Grid.Column="3" Name="CancelButton">取消</Button>
            <Button Grid.Column="4" Name="SaveButton">保存</Button>
        </Grid>
    </Grid>

</UserControl>