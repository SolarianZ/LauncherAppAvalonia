<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:LauncherAppAvalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LauncherAppAvalonia.Views.AppSettingsView"
             x:DataType="vm:AppSettingsViewModel"
             Background="{Binding ViewBackground}">

    <Design.DataContext>
        <vm:AppSettingsViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Spacing="10">

            <!-- 标题栏 -->
            <Border Background="{DynamicResource ThemeAccentBrush}"
                    CornerRadius="8"
                    Padding="10">
                <DockPanel>
                    <Button Content="←"
                            Command="{Binding CloseSettingsCommand}"
                            Background="Transparent" Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0"
                            VerticalAlignment="Center"
                            Padding="4" />
                    <TextBlock Text="设置"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White" />
                </DockPanel>
            </Border>

            <!-- 外观设置 -->
            <Border Background="{DynamicResource ThemeControlMidBrush}"
                    CornerRadius="8" Padding="8">
                <StackPanel Spacing="10">
                    <TextBlock Text="外观"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource ThemeForegroundBrush}" />

                    <Grid RowDefinitions="Auto,Auto"
                          ColumnDefinitions="60,*"
                          Margin="0,8,0,0"
                          RowSpacing="8">
                        <!-- 主题 -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Text="主题"
                                   Foreground="{DynamicResource ThemeForegroundBrush}" />
                        <ComboBox Grid.Row="0" Grid.Column="1"
                                  ItemsSource="{Binding AppSettings.Themes}"
                                  SelectedItem="{Binding AppSettings.Theme}"
                                  HorizontalAlignment="Stretch"
                                  ToolTip.Tip="选择应用主题" />

                        <!-- 语言 -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Text="语言"
                                   Foreground="{DynamicResource ThemeForegroundBrush}" />
                        <ComboBox Grid.Row="1" Grid.Column="1"
                                  ItemsSource="{Binding AppSettings.Languages}"
                                  SelectedItem="{Binding AppSettings.Language}"
                                  HorizontalAlignment="Stretch"
                                  ToolTip.Tip="选择应用语言" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 数据设置 -->
            <Border Background="{DynamicResource ThemeControlMidBrush}"
                    CornerRadius="8"
                    Padding="8">
                <StackPanel Spacing="10">
                    <TextBlock Text="数据"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource ThemeForegroundBrush}" />

                    <Button Content="清除所有记录"
                            HorizontalAlignment="Stretch"
                            Command="{Binding ClearItemsCommand}"
                            Margin="0,8,0,0" />

                    <Button Content="打开数据文件夹"
                            HorizontalAlignment="Stretch"
                            Command="{Binding OpenDataFolderCommand}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>